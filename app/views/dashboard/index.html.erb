<div class="row" id="dashboard">
    <h1>Dashboard</h1>
    <%= form_with local: true, method: :get do |f| %>
        <%= f.select "doctor",
            options_from_collection_for_select(Doctor.all.decorate, 'id', 'title_name',  @doctor&.id),
            include_blank: "Todos os mÃ©dicos" %>
        <%= f.submit 'Buscar' %>
    <% end %>
    <div id="data">
        <div class="row">
            <div class="col s12 m3">
                <div class="card blue-grey darken-1">
                    <div class="card-content white-text center-align">

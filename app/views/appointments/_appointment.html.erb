<tr>
  <td><%= appointment.starts_at.strftime("%d/%m/%Y") %></td>
  <td><%= appointment.starts_at.strftime("%H:%M") %> - <%= appointment.ends_at.strftime("%H:%M") %></td>
  <td><%= appointment.doctor.decorate.title_name %></td>
  <td><%= appointment.patient.name %></td>
  <td>
    <%= link_to edit_appointment_path(appointment), 
        class: 'btn waves-effect waves-light btn-small icon-button tooltipped', 
        data: { position: 'top', tooltip: 'Editar' } do %>
      <i class="material-icons">edit</i>
    <% end %>
    <%= link_to appointment, method: :delete,
        class: 'btn waves-effect waves-light btn-small icon-button tooltipped', 
        data: { position: 'top', tooltip: 'Excluir', confirm: 'Tem certeza?' } do %>
      <i class="material-icons">delete</i>
    <% end %>
  </td>
<tr>
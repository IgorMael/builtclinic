<div class='row'>
  <% if doctor.errors.any? %>
    <div id="error_explanation">
        <h5><%= pluralize(doctor.errors.count, "erro") %> no formul√°rio:</h5>

      <ul>
        <% doctor.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with(model: doctor, local: true, class: 'col s12') do |form| %>
    <div class="row">
      <div class="input-field col s6">
        <%= form.text_field :name, class: "validate" ,required: true %>
        <label for="doctor_name">Nome completo</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s4">
        <%= form.text_field :crm, class: "validate", required: true %>
        <label for="doctor_crm">CRM</label>
      </div>
      <div class="input-field col s2">
        <%= form.text_field :crm_uf, class: "validate", required: true %>
        <label for="doctor_crm_uf">CRM UF</label>
      </div>
    </div>

    <div class="actions">
      <%= link_to 'Voltar', doctors_path, class: 'btn-flat' %>
      <%= form.submit 'Cadastrar', class: 'btn' %>
    </div>
  <% end %>
</div>
<script>
  M.updateTextFields();
</script>